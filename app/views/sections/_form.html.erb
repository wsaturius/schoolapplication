<%= form_with(model: section) do |form| %>
  <% if section.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
        <% section.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :room, style: "display: block" %>
    <%= form.text_field :room %>
  </div>

  <div>
    <%= form.label :time_slot, style: "display: block" %>
    <%= form.text_field :time_slot %>
  </div>

  <div>
    <%= form.label :subject_id, "Subject", style: "display: block" %>
    <%= form.collection_select :subject_id, Subject.all, :id, :name, prompt: "Select a subject" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
